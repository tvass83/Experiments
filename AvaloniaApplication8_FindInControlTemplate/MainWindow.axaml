<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="300"
        d:DesignHeight="200"
        xmlns:controls="clr-namespace:AvaloniaApplication8_FindInControlTemplate"
        x:Class="AvaloniaApplication8_FindInControlTemplate.MainWindow"
        Title="AvaloniaApplication8_FindInControlTemplate">
  <StackPanel>
    <controls:Control1 Width="100" Height="50">
      <controls:Control1.Styles>
        <Style Selector="controls|Control1">
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate>
                <Border BorderThickness="1"
                        BorderBrush="Black">
                  <Grid x:Name="grid1" />
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>
      </controls:Control1.Styles>
    </controls:Control1>
  </StackPanel>
</Window>
