<Window x:Class="AvaloniaApp62_Virtualization_LazyEnumerable.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AvaloniaApp62_Virtualization_LazyEnumerable"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="AvaloniaApp62_Virtualization_LazyEnumerable"
        x:CompileBindings="True"
        x:DataType="local:ViewModel"
        Height="300"
        Width="600"
        mc:Ignorable="d">

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Grid RowDefinitions="50,10,*,10"
          Margin="20,0">

        <StackPanel Orientation="Horizontal"
                    Spacing="10">

            <Button Command="{Binding BreakCommand}"
                    Content="Break"
                    Padding="10,5" />

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Press break then resize the window so that the listbox items become invisible." />
                <TextBlock Text="Then start resizing back to normal size so that the items become visible again." />
            </StackPanel>
        </StackPanel>

        <ListBox Grid.Row="2"
                 Items="{Binding Values}" />
    </Grid>
</Window>
